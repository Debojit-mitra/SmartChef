<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="48dp"
    android:layout_marginBottom="8dp"
    android:paddingBottom="5dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/chat_bubble_ai"
        android:backgroundTint="@color/mode_darker"
        android:orientation="vertical"
        android:padding="12dp">

        <com.bunny.ml.smartchef.utils.RecipeTextView
            android:id="@+id/messageText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/mode_inverse"
            android:textIsSelectable="true"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/timeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="4dp"
            android:textColor="@color/mode_inverse_extra"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>